select r_headline from review where teacher_id = 2;

create table review(
review_id number primary key, --�썑湲� �븘�씠�뵒
member_id varchar2(20), -- �쉶�썝 �븘�씠�뵒
teacher_id number, -- 媛뺤궗�냼媛� �븘�씠�뵒
